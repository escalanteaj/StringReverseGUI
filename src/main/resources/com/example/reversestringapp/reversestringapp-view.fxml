<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reversestringapp.ReverseStringAppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Reverse String App">
        <font>
            <Font size="20.0" />
        </font>
      <VBox.margin>
         <Insets top="-150.0" />
      </VBox.margin>
    </Label>
    <Label text="Enter the text that you want to reverse:">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <TextField fx:id="textField" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" promptText="Enter text here" style="-fx-background-radius: 15; -fx-border-radius: 15;">
        <font>
            <Font size="16.0" />
        </font>
    </TextField>
    <Button fx:id="reverseButton" mnemonicParsing="false" onAction="#reversePress" style="-fx-background-radius: 15; -fx-border-radius: 15;" text="REVERSE" />
    <Label fx:id="resultLabel" text="Result">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
</VBox>
